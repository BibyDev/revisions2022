data("iris")
summary(iris)

#creation d'une matrice solo
CA <- c(110.5, 200)
EBITDA <- c(70, 90)
RN <- c(12, 15)

CR <- c(CA, EBITDA, RN)


Matrice_CR <- matrix(CR, nrow= 3, byrow= TRUE)
Matrice_CR

Titre_ligne <- c("CA", "EBITDA","RN")
Titre_col <- c("Ent1", "Ent2")

colnames(Matrice_CR) <- Titre_col
rownames(Matrice_CR) <- Titre_ligne
Matrice_CR

